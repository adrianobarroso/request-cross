<h2>Update Profile</h2>

<%= form_for @user, url: "/profile" do |f| %>

  <div class="row">
    <form class="form-inline">
      <div class="form-group">
        <%= f.radio_button :typeuser, "0" %><%= f.label :typeuser, "Customer", { style: "padding-left: 10px; padding-right: 20px;" } %>
        <%= f.radio_button :typeuser, "1" %><%= f.label :typeuser, "Support Agent", { style: "padding-left: 10px;" } %>
      </div>
      <div class="form-group">
        <%= f.text_field :firstname %>
        <label for="firstname">First Name</label>
      </div>
      <div class="form-group">
        <%= f.text_field :lastname %>
        <label for="lastname">Last Name</label>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>

<% end %>
